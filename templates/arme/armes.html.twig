{% extends 'base.html.twig' %}

{% block title %}Armes{% endblock %}

{% block monTitre %}Liste des armes{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col l12 col m6 offset-m3 col s12">
            <table class="highlight centered responsive-table">
                <tr class="grey darken-4 white-text">
                    <th id="img">Image</th>
                    <th>Type d'arme</th>
                    <th>Description</th>
                    <th>Dégat de l'arme</th>
                </tr>
                {% for w in weapons %}
                <tr>
                    <td><img src="{{ asset("images/Armes/" ~ w.name|replace({'é':'e'}) ~ ".png") }}"</td>
                    <td><a href="{{ path('afficherArme', {'name' : w.name|replace({'é':'e'})}) }}">{{ w.name }}</a></td>
                    <td>{{ w.description }}</td>
                    <td>{{ w.value }}</td>
                </tr>
                {% endfor %}
            </table>
        </div>
    </div>
</div>
{% endblock %}
